<h1 class="centertext-services">
   <i class="fa-solid fa-microphone-lines"></i>
    <strong>Check out our artists</strong>
 </h1>
<div>
  <%= form_with url: services_path, method: :get, class: "d-flex search" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control search-color",
      placeholder: "Find a musician"
    %>
    <%= submit_tag "Search", class: "btn" %>
  <% end %>
</div>
  <div class="scroll-tracker"></div>
  <ul class="cards">
    <% @services.each do |service| %>
      <%= link_to service_path(service) do %>

          <div class="card">
                  <%= cl_image_tag service.user.photo.key %>
                  <div class="centertext">
                    <h5>
                     <strong><%= service.user.name %></strong>
                    </h5>
                      <div class="servicetext">
                          <h3><%= service.genre %></h3>
                      </div>
                    </div>
              </div>
      <% end %>
    <% end %>
  </ul>
