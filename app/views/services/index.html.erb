<h1 class="centertext-services">All services</h1>
<%= form_with url: services_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a musician"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
  <ul class="cards">
    <% @services.each do |service| %>
      <%= link_to service_path(service) do %>

          <div class="card">
                  <%= cl_image_tag service.user.photo.key %>
                  <div class="centertext">
                    <h5><%= service.user.name %></h5>
                    <h6><%= service.user.last_name %></h6>
                      <div class="servicetext">
                        <p><%= service.details %></p>
                          <p>Genre: <%= service.genre %></p>
                      </div>
                    </div>
              </div>
      <% end %>
    <% end %>
  </ul>
<%= link_to "Add a service", new_service_path %>
