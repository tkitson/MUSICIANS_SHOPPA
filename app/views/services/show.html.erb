<div class="screen">
  <div class="banner" style="background-image: url(<%= cl_image_path @service.user.photo.key %>)">
    <h2>Hi, I'm <strong><%= "#{@service.user.name} #{@service.user.last_name}" %></strong></h2>
    <h2><strong><%= "#{@service.genre}" %></strong></h2>
  </div>

  <div class="artist-info">
    <div class="info">
      <h3>ABOUT ME</h3>
      <p><%= "#{@service.details}" %></p>
      <p><%= "#{@service.price.to_i}" "$/day" %></p>
    </div>

    <% if policy(@service).edit? %>
      <%= link_to "Edit this service", edit_service_path(@service) %> |
    <% end %>
    <%= button_to "Destroy this service", @service, method: :delete if policy(@service).destroy? %>

    <div class="bookings">
      <h3>MAKE A BOOKING</h3>
      <%= render "newbooking" %>
    </div>

    <div class="songs">
      <h3>SONGS</h3>
      <iframe style="border-radius:12px" src="https://open.spotify.com/embed/artist/4oLeXFyACqeem2VImYeBFe?utm_source=generator" width="100%" height="380" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy" class="spotify"></iframe>
    </div>
  </div>
  <div></div>
</div>
